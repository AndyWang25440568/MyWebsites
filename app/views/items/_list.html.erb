<table class="table table-striped">
  <th>Comments</th>
  <th>Rate</th>
  <th>Time</th>
  <% @item.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.grade %></td>
        <td> Posted <%= time_ago_in_words(comment.created_at) %> ago.</td>
        <% end %>
      </tr>
</table>