<div class="center hero-unit">
  <h4>Welcome to Comment House</h4>
  <table class="table table-hover">
    <tr>
      <th>Coffee Name</th>
      <th>Description</th>
      <th>Previous Comments</th>
      <th></th>
      <th></th>
    </tr>

    <% @items.each do |item| %>
        <tr>
          <th><%= item.name %></th>
          <td><%= item.description %></td>
          <td><%= link_to 'Want to know more', 'http://en.wikipedia.org/wiki/Cappuccino' %>
          <td><%= link_to 'View Comment', item, :class => 'btn btn-small btn-info' %></td>
        </tr>
    <% end %>
  </table>

  <br />
</div>

<%= link_to image_tag("Starbucks.png", alt: "Rails"), 'http://www.starbucks.com/' %>




